{
  "manifest_version": 3,
  "name": "Fetch Boy",
  "description": "리트리버가 텍스트를 물어오는 스크랩 익스텐션",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "src/presentation/popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "background": {
    "service_worker": "src/infrastructure/background/service-worker.ts"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/presentation/content/index.ts"]
    }
  ],
  "permissions": ["storage", "activeTab"],
  "commands": {
    "fetch-selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "선택한 텍스트 스크랩하기"
    }
  }
}
